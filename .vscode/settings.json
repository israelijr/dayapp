{
    "cmake.sourceDirectory": "C:/DEV/dayapp/windows",
    
    // Otimizações para reduzir ferramentas e melhorar performance
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/build/**": true,
        "**/.dart_tool/**": true,
        "**/.pub-cache/**": true,
        "**/android/.gradle/**": true,
        "**/android/build/**": true,
        "**/android/app/build/**": true,
        "**/ios/Pods/**": true,
        "**/ios/.symlinks/**": true,
        "**/.flutter-plugins-dependencies": true,
        "**/coverage/**": true
    },
    
    "files.exclude": {
        "**/.dart_tool": true,
        "**/.packages": true,
        "**/build/": true,
        "**/.flutter-plugins": true,
        "**/.flutter-plugins-dependencies": true,
        "android": true,
        "ios": true,
        "windows": true,
        "web": true
    },
    
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/build/**": true,
        "**/.dart_tool/**": true,
        "**/android/.gradle/**": true,
        "**/android/build/**": true,
        "**/ios/Pods/**": true,
        "**/coverage/**": true
    },
    
    // Desabilitar análise Java para projeto Flutter/Dart
    "java.import.gradle.enabled": false,
    "java.configuration.updateBuildConfiguration": "disabled",
    "java.autobuild.enabled": false,
    "java.server.launchMode": "Lightweight",
    "java.jdt.ls.java.home": "",
    "java.enabled": false,
    "java.import.enabled": false,
    "java.import.gradle.wrapper.enabled": false,
    "java.import.maven.enabled": false,
    "java.debug.settings.enableRunDebugCodeLens": false,
    "java.debug.settings.forceBuildBeforeLaunch": false,
    
    // Desabilitar integração de terminal Java
    "terminal.integrated.env.windows": {},
    "terminal.integrated.allowWorkspaceConfiguration": false,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.environmentChangesRelaunch": false,
    
    // Desabilitar todas as extensões Java
    "java.enabled": false,
    "java.jdt.ls.java.home": null,
    
    // Otimizações Dart/Flutter
    "dart.analysisServerFolding": false,
    "dart.previewFlutterUiGuides": false,
    "dart.completeFunctionCalls": true,
    
    // Otimizações gerais de performance
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": false,
    "extensions.ignoreRecommendations": true,
    
    // Desabilitar Git em subpastas que causam lentidão
    "git.ignoredRepositories": [
        "android",
        "ios",
        "build"
    ],
    
    // FORÇA desabilitar todas as extensões Java
    "redhat.telemetry.enabled": false,
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m",
    "gradle.autoDetect": "off",
    "gradle.nestedProjects": false,
    
    // Desabilitar associação de arquivos que ativam Java
    "files.associations": {
        "*.gradle": "plaintext",
        "*.gradle.kts": "plaintext",
        "gradlew": "plaintext",
        "gradlew.bat": "plaintext"
    },
    
    // Configurar mensagens de commit em português
    "git.inputValidationLength": 72,
    "git.inputValidationSubjectLength": 50,
    "git.branchPrefix": "",
    "git.defaultBranchName": "main",
    
    // GitHub Copilot - Gerar mensagens de commit em português
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": false,
        "markdown": true
    },
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "text": "Gere mensagens de commit em português do Brasil (pt-BR)."
        },
        {
            "text": "Use o formato: tipo(escopo): descrição"
        },
        {
            "text": "Tipos válidos: feat, fix, docs, style, refactor, test, chore"
        },
        {
            "text": "Exemplos: 'feat(auth): adicionar login com PIN', 'fix(ui): corrigir exibição de anexos'"
        }
    ]
}